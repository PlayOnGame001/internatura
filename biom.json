{
	"formatter": true,
	"linter": {
		"enabled": true
	},
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "double"],
		"sort-imports": [
			"error",
			{
				"ignoreCase": false,
				"ignoreDeclarationSort": false,
				"ignoreMemberSort": false,
				"memberSyntaxSortOrder": ["none", "all", "multiple", "single"]
			}
		],
		"assist/source/organizeImports": "fixable"
	},
	"files": {
		"ignore": ["tsconfig*.json"]
	}
}
